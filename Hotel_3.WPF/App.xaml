<Application x:Class="Hotel_3.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Hotel_3.WPF"
             xmlns:material='http://materialdesigninxaml.net/winfx/xaml/themes'
             xmlns:vm="clr-namespace:Hotel_3.WPF.ViewModels"
             xmlns:views="clr-namespace:Hotel_3.WPF.Views"
             xmlns:viewsAdmin="clr-namespace:Hotel_3.WPF.Views.Admin"
             xmlns:vmAdmin="clr-namespace:Hotel_3.WPF.ViewModels.Admin">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <material:BundledTheme BaseTheme="Light" PrimaryColor="LightBlue" SecondaryColor="Blue"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" /> 
                
                <ResourceDictionary>
                    
                    <!-- Auth -->
                    <DataTemplate DataType="{x:Type vm:AuthViewModel}">
                        <views:AuthView/>
                    </DataTemplate>
                    
                    <!-- Main -->
                    <DataTemplate DataType="{x:Type vm:MainViewModel}">
                        <views:MainView/>
                    </DataTemplate>
                    
                    <!-- Admin -->
                    <DataTemplate DataType="{x:Type vmAdmin:RoomsViewModel}">
                        <viewsAdmin:RoomsView/>
                    </DataTemplate>
                    
                    <DataTemplate DataType="{x:Type vmAdmin:CategoryViewModel}">
                        <viewsAdmin:CategoryView/>
                    </DataTemplate>
                    
                    <DataTemplate DataType="{x:Type vmAdmin:StatusViewModel}">
                        <viewsAdmin:StatusView/>
                    </DataTemplate>
                    
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
