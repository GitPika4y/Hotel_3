<Application x:Class="Hotel_3.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Hotel_3.WPF"
             xmlns:material='http://materialdesigninxaml.net/winfx/xaml/themes'
             
             xmlns:vm="clr-namespace:Hotel_3.WPF.ViewModels"
             xmlns:roomsVm="clr-namespace:Hotel_3.WPF.ViewModels.Rooms"
             xmlns:usersVm="clr-namespace:Hotel_3.WPF.ViewModels.Users"
             
             xmlns:views="clr-namespace:Hotel_3.WPF.Views"
             xmlns:viewRooms="clr-namespace:Hotel_3.WPF.Views.Rooms"
             xmlns:viewUsers="clr-namespace:Hotel_3.WPF.Views.Users">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <material:BundledTheme BaseTheme="Light" PrimaryColor="LightBlue" SecondaryColor="Blue"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" /> 
                
                <ResourceDictionary>
                    
                    <!-- Auth -->
                    <DataTemplate DataType="{x:Type vm:AuthViewModel}">
                        <views:AuthView/>
                    </DataTemplate>
                    
                    <!-- Main -->
                    <DataTemplate DataType="{x:Type vm:MainViewModel}">
                        <views:MainView/>
                    </DataTemplate>
                    
                    <!-- Data -->
                    <DataTemplate DataType="{x:Type vm:DataViewModel}">
                        <views:DataView/>
                    </DataTemplate>
                    
                    <!-- Rooms -->
                    <DataTemplate DataType="{x:Type roomsVm:RoomsViewModel}">
                        <viewRooms:RoomsView/>
                    </DataTemplate>
                    
                    <DataTemplate DataType="{x:Type roomsVm:CategoryViewModel}">
                        <viewRooms:CategoryView/>
                    </DataTemplate>
                    
                    <DataTemplate DataType="{x:Type roomsVm:StatusViewModel}">
                        <viewRooms:StatusView/>
                    </DataTemplate>
                    
                    <!-- Users -->
                    <DataTemplate DataType="{x:Type usersVm:UserViewModel}">
                        <viewUsers:UserView/>
                    </DataTemplate>
                    
                    <DataTemplate DataType="{x:Type usersVm:RoleViewModel}">
                        <viewUsers:RoleView/>
                    </DataTemplate>
                    
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
