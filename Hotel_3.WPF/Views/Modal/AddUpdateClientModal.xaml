<UserControl x:Class="Hotel_3.WPF.Views.Modal.AddUpdateClientModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <StackPanel Margin="15">
        <TextBlock Text="{Binding Title}"
                   FontSize="24"
                   Margin="0 15"
                   HorizontalAlignment="Center"/>
        <TextBox Text="{Binding LastName}"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 md:HintAssist.Hint="Фамилия"
                 Margin="0 15"/>
        <TextBox Text="{Binding FirstName}"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 md:HintAssist.Hint="Имя"
                 Margin="0 15"/>
        <TextBox Text="{Binding MiddleName}"
                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                 md:HintAssist.Hint="Отчество"
                 Margin="0 15"/>
        <Button Content="{Binding ConfirmButtonText}"
                Command="{Binding SaveClientCommand}"
                Margin="0 15"/>
        <Button Content="Назад"
                Command="{x:Static md:DialogHost.CloseDialogCommand}"
                Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                Margin="0 15"
            />
    </StackPanel>
</UserControl>
