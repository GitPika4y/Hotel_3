<UserControl x:Class="Hotel_3.WPF.Views.Modal.ConfirmModal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <StackPanel Margin="15">
        <TextBlock Text="{Binding Title}"
                   FontSize="24"
                   HorizontalAlignment="Center"
                   Margin="0 15"
                   />
        
        <TextBlock Text="{Binding Description}"
                   FontSize="20"
                   TextWrapping="Wrap"
                   Margin="0 15"
                   />
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Content="Продолжить"
                    Background="#FEB308"
                    BorderBrush="#FEB308"
                    Margin="15 0"
                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                    CommandParameter="{Binding AnswerConfirmed}"
                    />
            <Button Content="Назад"
                    Style="{StaticResource MaterialDesignFlatSecondaryLightButton}"
                    Margin="15 0"
                    Command="{x:Static md:DialogHost.CloseDialogCommand}"
                    CommandParameter="{Binding Answer.Denied}"
                    />
        </StackPanel>
    </StackPanel>
</UserControl>
